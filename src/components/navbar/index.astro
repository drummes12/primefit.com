---
import MenuDesktop from './menu-desktop.astro'
import MenuMobile from './menu-mobile.astro'


---

<nav class="top-0 fixed z-20 w-full px-6 py-3 sm:py-4 flex gap-8 items-center justify-between">
  <div class="-z-10 inset-0 absolute backdrop-blur-lg w-full h-full border-b border-b-secondary-color/30"></div>
  <a href="/">
    <h1>Prime<span class="font-bold text-slate-400">Fit</span></h1>
  </a>

  <MenuMobile />
  <MenuDesktop />
</nav>

<style>
  nav {
    animation-name: nav-enter;
    animation-fill-mode: both;
    animation-timeline: scroll();
    animation-range: entry 0% cover 10%;
  }

  @keyframes nav-enter {
    to {
      @apply bg-primary-color/70 text-secondary-color;
    }
  }
</style>
