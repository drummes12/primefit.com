---
import '@fontsource/poppins/400.css'
import '@fontsource/poppins/600.css'
import '@fontsource/poppins/900.css'

interface Props {
  title: string
  description?: string
}

const {
  title,
  description = 'Entrenador personal online y presencial. Planes de entrenamiento y nutrición personalizados para mejorar tu fuerza, flexibilidad y bienestar general. Ideal para todas las edades y niveles. ¡Transforma tu salud física y emocional desde casa o en sesiones presenciales!'
} = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
    --primary-color: #e46c2b;
    --secondary-color: #31382e;
    --tertiary-color: #00ffc8;
    --accent-color: #ffe1d0;
    --background-color: #1b171d;
  }
  html {
    font-family: system-ui, sans-serif;
    @apply bg-background-color text-primary-color;
    scroll-behavior: smooth;
    overflow-x: hidden;
  }

  body {
    position: relative;
    font-family: 'Poppins', sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: pretty;
  }
  p,
  small {
    text-wrap: balance;
  }
</style>
